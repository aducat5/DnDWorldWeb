<!-- banner part start-->
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-6 col-md-8">
                <div class="banner_text">
                    <div class="banner_text_iner">
                        <h1>
                            Kendi dünyanda kendi tarihini yaz.
                            @ViewBag.Status
                        </h1>
                        <p>
                            Devam eden maceranı yazdığın evrenle beraber oluşturup tarihini oluşturabilirsin. Karakterlerin efsanelere konuk olabilir, evreninin hikayesini oluşturabilirsin.
                        </p>
                        @if (Session["user"] != null)
                        {
                            @Html.ActionLink("Bir Evren Yarat", "Create", "Universe", null, new { @class = "btn_1" });
                        }
                        else
                        {
                            @Html.ActionLink("Aramıza Katıl", "SignUp", "Sign", null, new { @class = "btn_1" });
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

